{
  "private": true,
  "author": "Don McCurdy <dm@donmccurdy.com>",
  "repository": "github:donmccurdy/glTF-Transform",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dist": "lerna exec --ignore cli \"tsc\"",
    "dist:test": "lerna exec --ignore cli \"tsc --module commonjs\"",
    "watch": "lerna exec --parallel --ignore cli \"tsc --watch\"",
    "watch:test": "lerna exec --parallel --ignore cli \"tsc --watch --module commonjs\"",
    "clean": "rm -rf packages/*/dist/**",
    "test": "npm run dist:test && npm run test:run && npm run clean",
    "test:run": "tape packages/*/test/*.test.js | tap-spec",
    "coverage": "npm run dist:test && npm run coverage:run && npm run clean",
    "coverage:run": "nyc --reporter=text tape packages/*/test/*.test.js",
    "coverage:report": "npm run dist:test && nyc report --reporter=text-lcov | coveralls && npm run clean",
    "lint": "eslint packages/*/src/**/*.ts",
    "validate": "scripts/validate.js",
    "preversion": "npm run validate",
    "version": "npm run docs && git add -A docs",
    "docs": "echo \"docs generation not implemented\" && exit 1"
  },
  "devDependencies": {
    "@gltf-transform/ao": "file:packages/ao",
    "@gltf-transform/atlas": "file:packages/atlas",
    "@gltf-transform/cli": "file:packages/cli",
    "@gltf-transform/colorspace": "file:packages/colorspace",
    "@gltf-transform/core": "file:packages/core",
    "@gltf-transform/prune": "file:packages/prune",
    "@gltf-transform/split": "file:packages/split",
    "@types/node": "^10.12.17",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "canvas": "^2.2.0",
    "coveralls": "^3.0.11",
    "eslint": "^6.8.0",
    "gltf-validator": "^2.0.0-dev.2.7",
    "lerna": "2.8.0",
    "nyc": "^15.0.1",
    "source-map-support": "^0.5.9",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.1",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {}
}
