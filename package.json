{
  "private": true,
  "name": "gltf-transform",
  "author": "Don McCurdy <dm@donmccurdy.com>",
  "repository": "github:donmccurdy/glTF-Transform",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dist": "lerna run dist --parallel",
    "watch": "lerna run watch --parallel",
    "watch:debug": "lerna run watch:debug --parallel",
    "clean": "rm -rf packages/*/dist/**",
    "test": "tape packages/*/test/*.test.js | tap-spec",
    "coverage": "nyc --reporter=text tape packages/*/test/*.test.js",
    "coverage:report": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint packages/*/src/**/*.ts",
    "validate": "scripts/validate.js",
    "preversion": "npm run test && npm run dist",
    "version": "npm run docs && git add -A docs",
    "docs": "echo \"docs generation not implemented\" && exit 1"
  },
  "devDependencies": {
    "@gltf-transform/ao": "file:packages/ao",
    "@gltf-transform/cli": "file:packages/cli",
    "@gltf-transform/colorspace": "file:packages/colorspace",
    "@gltf-transform/core": "file:packages/core",
    "@gltf-transform/prune": "file:packages/prune",
    "@gltf-transform/split": "file:packages/split",
    "@types/node": "^10.12.17",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "canvas": "^2.6.1",
    "coveralls": "^3.0.11",
    "eslint": "^6.8.0",
    "gl": "^4.5.0",
    "gltf-validator": "^2.0.0-dev.2.7",
    "lerna": "^3.20.2",
    "microbundle": "^0.11.0",
    "nyc": "^15.0.1",
    "source-map-support": "^0.5.9",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.1",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  }
}
