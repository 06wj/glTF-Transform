{
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "@gltf-transform/*": ["*/src"]
    },
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "target": "es6",
    "declaration": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["packages/*/src/**/*.ts"]
}
